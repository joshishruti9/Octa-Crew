@page "{id}"
@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Models
@inject JsonFileTravelTipService TravelTipService
@model DeleteTravelTipModel
@if (Model.TravelTip != null)
{
	ViewData["Title"] = "Delete travel tip";

	<h1>Delete Travel Tip</h1>

	<div class="container">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@Html.HiddenFor(x => x.TravelTip.Id)

			<div class="form-group">
				<label asp-for="TravelTip.Title" class="control-label"></label>
				<input asp-for="TravelTip.Title" class="form-control" />
				<span asp-validation-for="TravelTip.Title" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="TravelTip.Description" class="control-label"></label>
				<input asp-for="TravelTip.Description" class="form-control" />
				<span asp-validation-for="TravelTip.Description" class="text-danger"></span>
			</div>

			<h3>Are You Sure You Want to Delete?</h3>

			<div class="form-group">
				<input type="submit" value="Confirm" class="btn btn-primary" />
			</div>
		</form>
	</div>
}