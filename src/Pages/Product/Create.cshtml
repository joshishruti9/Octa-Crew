@page
@model CreateModel
@{
    ViewData["Title"] = "Create Page";
}

<div class="custom-margin-top">
    <h1>Create</h1>
    <div class="container">
        <div class="form-container">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(x => x.Product.Id)

                <div class="form-group">
                    <label asp-for="Product.Title" class="control-label"></label>
                    <input asp-for="Product.Title" class="form-control" placeholder="Enter Title" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label"></label>
                    <input asp-for="Product.Description" class="form-control" placeholder="Enter Description" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @for (int i = 0; i < Model.Product.Images.Length; i++)
                    {
                        <label asp-for="Product.Images[@i]" class="control-label">Image @(i + 1)</label>
                        <input asp-for="Product.Images[@i]" class="form-control mb-2" placeholder="Enter URL" />
                        <div>
                            <span asp-validation-for="Product.Images[@i]" class="text-danger"></span>
                        </div>
                    }
                </div>

                <div class="form-group">
                    <label asp-for="Product.BestSeason" class="control-label">Best Season</label>
                    <input asp-for="Product.BestSeason" class="form-control" placeholder="Enter Best Season to Visit"/>
                    <span asp-validation-for="Product.BestSeason" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.Currency" class="control-label"></label>
                    <input asp-for="Product.Currency" class="form-control" placeholder="Enter Currency" />
                    <span asp-validation-for="Product.Currency" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.TimeZone" class="control-label">Time Zone</label>
                    <input asp-for="Product.TimeZone" class="form-control" placeholder="Enter Time Zone" />
                    <span asp-validation-for="Product.TimeZone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @for (int i = 0; i < Model.Product.Attractions.Length; i++)
                    {
                        <label asp-for="Product.Attractions[@i]" class="control-label">Attraction @(i + 1)</label>
                        <input asp-for="Product.Attractions[@i]" class="form-control mb-2" placeholder="Enter an Attraction" />
                        <span asp-validation-for="Product.Attractions[@i]" class="text-danger"></span>
                    }
                </div>

                <div class="form-group">
                    <label asp-for="Product.Cost" class="control-label"></label>
                    <input asp-for="Product.Cost" class="form-control" placeholder="Enter Average Cost" />
                    <span asp-validation-for="Product.Cost" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.TravelTime" class="control-label">Travel Time</label>
                    <input asp-for="Product.TravelTime" class="form-control" placeholder="Enter Travel Time" />
                    <span asp-validation-for="Product.TravelTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}